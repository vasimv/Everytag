<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Column headers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="Send to beacon"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Configuration setting"
            android:textStyle="bold" />
    </LinearLayout>

    <View style="@style/Divider" />

    <!-- Scrollable table body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Target MAC (no update checkbox) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="48dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target MAC" />

                    <EditText
                        android:id="@+id/etTargetMac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Target MAC"
                        android:inputType="text"
                        android:maxLength="17" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Password (always sent, no update checkbox) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="48dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password" />

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password (8 ASCII chars)"
                        android:inputType="textVisiblePassword"
                        android:maxLength="8" />

                    <TextView
                        android:id="@+id/tvPasswordError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="Password must be exactly 8 ASCII characters"
                        android:textColor="#FF4444"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Broadcast AirTag -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbBroadcastAirtagUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <CheckBox
                    android:id="@+id/cbBroadcastAirtag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Broadcast AirTag" />
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Broadcast FMDN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbBroadcastFmdnUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <CheckBox
                    android:id="@+id/cbBroadcastFmdn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Broadcast FMDN" />
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- TX Power -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbTxPowerUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TX Power" />

                    <Spinner
                        android:id="@+id/spTxPower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Broadcast period -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbBroadcastPeriodUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Broadcast period (seconds)" />

                    <Spinner
                        android:id="@+id/spBroadcastPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Key interval -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbKeyIntervalUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Key interval (Seconds)" />

                    <EditText
                        android:id="@+id/etKeyInterval"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Key interval (seconds)"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Accel threshold -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbAccelThresholdUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Accel Threshold" />

                    <EditText
                        android:id="@+id/etAccelThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Accel threshold"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbStatusUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status (hex, 3 bytes)" />

                    <EditText
                        android:id="@+id/etStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Status (hex, 3 bytes)"
                        android:inputType="text"
                        android:maxLength="6" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- FMDN key -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFmdnKeyUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FMDN key (20 bytes hex)" />

                    <EditText
                        android:id="@+id/etFmdnKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="FMDN key (20 bytes hex)"
                        android:inputType="text" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Keyfile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbKeyfileUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Airtag keyfile" />

                    <Button
                        android:id="@+id/btnSelectKeyfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Airtag keyfile" />

                    <TextView
                        android:id="@+id/tvKeyfileStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="No keyfile selected" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- Config MAC -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbConfigMacUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Config MAC" />

                    <EditText
                        android:id="@+id/etConfigMac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Config MAC"
                        android:inputType="text"
                        android:maxLength="17" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/Divider" />

            <!-- New password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbNewPasswordUpd"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Password" />

                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="New password (8 ASCII chars)"
                        android:inputType="textVisiblePassword"
                        android:maxLength="8" />

                    <TextView
                        android:id="@+id/tvNewPasswordError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="New password must be exactly 8 ASCII characters"
                        android:textColor="#FF4444"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View style="@style/Divider" />

    <!-- Bottom buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BACK" />

        <Button
            android:id="@+id/btnSendToBeacon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEND TO BEACON" />
    </LinearLayout>

</LinearLayout>
