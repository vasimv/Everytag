        <item name="android:layout_width">match_parent</item>
        <!-- Divider thickness reduced 3x for table row separators -->
        <item name="android:layout_height">6dp</item>
        <item name="android:background">#888888</item>
        <item name="android:layout_marginVertical">12dp</item>
